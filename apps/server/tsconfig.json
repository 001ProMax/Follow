{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vite/client"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./index.ts",
    "./api/index.ts",
    "./tsup.config.ts",
    "./client/**/*.ts",
    "./client/**/*.tsx",
    "./vite.config.ts",
    "./tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
